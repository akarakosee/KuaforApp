@model IEnumerable<KuaforApp.Models.Appointment>

<h2>Randevularınız</h2>

<table class="table">
    <thead>
        <tr>
            <th>Berber</th>
            <th>Tarih</th>
            <th>Saat</th>
            <th>Notlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.Employee?.FullName</td>
                <td>@appointment.Date.ToString("dd/MM/yyyy")</td>
                <td>@appointment.Time.ToString(@"hh\:mm")</td>
                <td>@appointment.Notes</td>
            </tr>
        }
    </tbody>
</table>
